<?xml version="1.0" encoding="UTF-8" ?>
<Shell
        x:Class="Proyecto_App_AlmaFria.AppShell"
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:local="clr-namespace:Proyecto_App_AlmaFria"
        xmlns:views="clr-namespace:Proyecto_App_AlmaFria.Views"
        Title="Proyecto_App_AlmaFria"
        Shell.FlyoutBehavior="Disabled"
        Shell.NavBarIsVisible="False">

    <ShellContent
        Title="Inicio"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        Title="Crear cuenta"
        ContentTemplate="{DataTemplate views:CreateAccountPage}"
        Route="CreateAccountPage" />
    <ShellContent Title="Menu"
                    ContentTemplate="{DataTemplate views:MenuPage}"
                    Route="MenuPage" />
    <ShellContent Title="Detalle productos" ContentTemplate="{DataTemplate views:ProductDetailPage}"
                      Route="ProductDetailPage" />

</Shell>
